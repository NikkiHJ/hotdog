<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :place_name %>
    <%= f.input :street %>
    <%= f.input :suburb %>
    <%= f.input :date %>
    <%= f.input :start_time %>
    <%= f.input :finish_time %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
